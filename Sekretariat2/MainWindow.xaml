        xmlns:local="clr-namespace:Sekretariat2"
        mc:Ignorable="d"
        Title="MainWindow" Height="471" Width="1013">
    <Grid>
        <TabControl>
            <TabItem Header="Uczniowie">
                <Grid Background="#FFE5E5E5" Margin="9,0,150,107" Height="321">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="89*"/>
                        <ColumnDefinition Width="94*"/>
                        <ColumnDefinition Width="377*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListView_Uczniowie" Margin="5,10,5,72" Grid.ColumnSpan="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Imie" Width="60"/>
                                <GridViewColumn Header="Drugie Imie" Width="80"/>
                                <GridViewColumn Header="Nazwisko" Width="80"/>
                                <GridViewColumn Header="Nazwisko Panienskie" Width="120"/>
                                <GridViewColumn Header="Imiona rodzicow" Width="100"/>
                                <GridViewColumn Header="Imiona rodzicow" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Nauczyciele ">
                <Grid Background="#FFE5E5E5" Margin="0,0,150,87" Height="321">
                    <ListView x:Name="ListView_Nauczyciele" Margin="5,0,5,41">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Pracownicy ">
                <Grid Background="#FFE5E5E5" Margin="0,0,150,87" Height="349">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="593*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListView_Pracownicy" Margin="5,0,181,55" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>


        </TabControl>
        <Button x:Name="Btn_Dodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="906,47,0,0" VerticalAlignment="Top" Height="29" Width="78"/>
        <Button x:Name="Btn_Zmien" Content="Zmien" Height="29" Width="77" Margin="907,81,29,345"/>
        <Button x:Name="Btn_Usun" Content="Usun" Height="29" Width="77" Margin="907,115,29,311"/>
        <Button x:Name="Btn_Zaladuj" Content="Zaldauj" Height="29" Width="77" Margin="907,149,29,277"/>
        <Button x:Name="Btn_Zapisz" Content="Zapisz" Height="29" Width="77" Margin="907,183,29,243"/>
    </Grid>
</Window>
